mixin nav-item(name, route, hamburgerOnly)
  - var classes = [name === active ? 'active' : '', hamburgerOnly ? 'mobile-only' : ''];
  li.primary-nav__item(class=classes)
    a.primary-nav__item__link.link--animate(href="#{route}")=name

doctype html
html(lang='en')
  head
    title= title
      |  | Jackie Kutcher
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href=assetFingerprint("css/bundle.css"))
    link(rel='author' content='David Zukowski' href='//zuko.me')
    link(rel='stylesheet' href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
    link(rel='shortcut icon' href='img/favicon.ico')
  body
    div.page-container
      block header
      nav.primary-nav
        div.content-container
          div.row
            div.col-sm-12.clearfix
              a(href='/').primary-nav__hero
                div
                  span.desktop-only Jackie
                  span.tablet-only J
                  span.primary-nav__hero__accent  |&nbsp;
                  span.desktop-only Kutcher
                  span.tablet-only K
              a.primary-nav__toggle
                i.fa.fa-bars
              ul.primary-nav__links.list--unstyled
                +nav-item('Home', '/', true)
                each item in navigation
                  +nav-item(item.name, item.route)
      div.view-container
        if heading
          h1.heading--section#heading
            span.copy=heading
        block view-content
      footer
        div.content-container
          div.contact
            div.copy
              p Want to get in touch? Check out my 
                a.link(href='/contact') contact page
                |  or find me here:
            ul.contact__links
              li.linkedin
                a(href='//linkedin.com/pub/jacqueline-kutcher/b1/754/2ba')
                  span.sr-only LinkedIn
                  i.fa.fa-linkedin
              li.email
                a(href='mailto:test@dev.com')
                  span.sr-only Email
                  i.fa.fa-envelope-o
    script(src=assetFingerprint('app/app-bundle.js') defer)
